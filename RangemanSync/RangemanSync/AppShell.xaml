<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="RangemanSync.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:RangemanSync"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Main menu">
            <ShellContent Title="Download GPX" ContentTemplate="{DataTemplate local:MainPage}" Route="MainPage" />
            <ShellContent Title="Configuration" ContentTemplate="{DataTemplate local:ConfigPage}" Route="Config" />
        </Tab>
    </TabBar>
</Shell>
